---
import Layout from '../layouts/Layout.astro';
import ContactForm from '../components/pieces/ContactForm.astro';
import { Image } from 'astro:assets';
import ContactImage from '../assets/undraw_nature_on_screen.svg';
---

<Layout title="Contact">
	<section id="contact" class="section top">
        <div class="content">
            <h2 class="content-title">Get in <span class="title-highlight">Touch</span></h2>
            <div class="content-instructions">
                <p>Have questions or just want to say hello? Feel free to use the form here to reach out about anything. If you're not ready to dive into the <a href="/start">Get Started</a> form, that's okayâ€”I'm here to help and would love to hear from you!</p>
            </div>
            <div class="content-form">
                <ContactForm />
            </div>
        </div>
        <div class="image">
            <Image src={ContactImage} alt="Thank You!" />
        </div>
    </section>
</Layout>

<style>
    #contact {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
        align-items: center;
        margin-top: 4em;
    }
    .content {
        width: 50%;
    }
    .content-form {
        margin-top: 2em;
    }
    .content-title {
        font-family: var(--font-display);
        font-size: 3em;
        line-height: 1em;
    }
    .title-highlight {
        color: var(--primary);
    }
    .content-instructions {
        margin: 2em 0;
    }
    .image {
        width: 40%;
    }
    .image img {
        width: 100%;
        height: auto;
    }

    @media (max-width: 1000px) {
        .content {
            width: 100%;
        }
        .content-form {
            width: 90%;
            margin: 0 auto 4em;
        }
        .image {
            width: 60%;
            margin: 0 auto;
        }
    }
</style>