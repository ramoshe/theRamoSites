---
import { Icon } from "astro-icon";
const year = new Date().getFullYear()
---
<footer>
    <div id="footer-container">
        <div class="links">
            <h4 class="site-title">Myte by theRamoShe</h4>
            <a href="/privacy">Privacy Policy</a>
            <a href="/cookies">Cookie Policy</a>
        </div>
        <div class="socials">
            <ul class="socials-list">
                <li class="social-item">
                    <a href="https://youtube.com/@theramoshe" target="_blank" aria-label="YouTube">
                        <Icon name="tabler:brand-youtube" class="social-icon" />
                    </a>
                </li>
                <li class="social-item">
                    <a href="https://tiktok.com/@theramoshe" target="_blank" aria-label="TikTok">
                        <Icon name="tabler:brand-tiktok" class="social-icon" />
                    </a>
                </li>
                <li class="social-item">
                    <a href="https://twitter.com/theramoshe" target="_blank" aria-label="Twitter">
                        <Icon name="tabler:brand-x" class="social-icon" />
                    </a>
                </li>
                <li class="social-item">
                    <a href="https://facebook.com/theramoshe" target="_blank" aria-label="Facebook">
                        <Icon name="tabler:brand-facebook" class="social-icon" />
                    </a>
                </li>
                <li class="social-item">
                    <a href="https://github.com/ramoshe" target="_blank" aria-label="GitHub">
                        <Icon name="tabler:brand-github" class="social-icon" />
                    </a>
                </li>
                <li class="social-item">
                    <a href="https://youtube.com/@theramoshe" target="_blank" aria-label="YouTube">
                        <Icon name="tabler:brand-youtube" class="social-icon" />
                    </a>
                </li>
            </ul>
        </div>
        <div class="copyright">
            <p>&copy; {year} theRamoShe Â· All rights reserved.</p>
        </div>
    </div>
</footer>

<style>
    ul { padding: 0; }
    li { list-style-type: none; }
    footer {
        margin-top: 4em;
        border-top: 1px solid var(--gray-contrast);
        padding: 4em 0 2em;
    }
    #footer-container {
        display: flex;
        flex-wrap: wrap;
        width: 90%;
        max-width: 1400px;
        margin: 0 auto;
        justify-content: space-between;
    }

    .site-title {
        margin-bottom: .5em;
    }
    .links a {
        color: var(--accent);
        text-decoration: none;
        margin-right: 1.5em;
    }
    .links a:hover {
        text-decoration: underline;
    }

    .socials-list {
        display: flex;
        justify-content: flex-end;
        gap: 1em;
    }
    .social-icon {
        width: 40px;
        height: auto;
        color: var(--gray);
    }
    .social-icon:hover {
        color: var(--accent);
    }

    .copyright {
        width: 100%;
        text-align: center;
        margin-top: 4em;
        font-size: .8em;
        color: var(--gray);
    }

    @media (max-width: 800px) {
        #footer-container {
            justify-content: center;
        }
        .links {
            text-align: center;
            margin-bottom: 3em;
        }
        .links a {
            margin: 0 .7em;
        }
    }
</style>