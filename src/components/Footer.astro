---
import { Icon } from "astro-icon";
const year = new Date().getFullYear();
const socials = [
    {
        platform: `YouTube`,
        icon: `tabler:brand-youtube`,
        link: `https://youtube.com/@theramoshe`
    },
    {
        platform: `TikTok`,
        icon: `tabler:brand-tiktok`,
        link: `https://tiktok.com/@theramoshe`
    },
    {
        platform: `Instagram`,
        icon: `tabler:brand-instagram`,
        link: `https://instagram.com/theramoshe`
    },
    {
        platform: `Facebook`,
        icon: `tabler:brand-facebook`,
        link: `https://facebook.com/theramoshe`
    },
    {
        platform: `GitHub`,
        icon: `tabler:brand-github`,
        link: `https://github.com/ramoshe`
    },
    // {
    //     platform: ``,
    //     icon: ``,
    //     link: ``
    // },
];
---
<footer>
    <div id="footer-container">
        <div class="links">
            <h4 class="site-title">Sites by theRamoShe</h4>
            <a href="/privacy">Privacy Policy</a>
            <a href="/cookies">Cookie Policy</a>
        </div>
        <div class="socials">
            <ul class="socials-list">
                { socials.map(s => (
                    <li class="social-item">
                        <a href={s.link} target="_blank" aria-label={s.platform}>
                            <Icon name={s.icon} class="social-icon" />
                        </a>
                    </li>
                )) }
            </ul>
        </div>
        <div class="copyright">
            <p>&copy; {year} <a href="https://theramoshe.com" target="_blank">theRamoShe</a> Â· All rights reserved.</p>
        </div>
    </div>
</footer>

<style>
    ul { padding: 0; }
    li { list-style-type: none; }
    footer {
        margin-top: 4em;
        border-top: 1px solid var(--gray-contrast);
        padding: 4em 0 2em;
    }
    #footer-container {
        display: flex;
        flex-wrap: wrap;
        width: 90%;
        max-width: var(--headfoot-width);
        margin: 0 auto;
        justify-content: space-between;
    }

    .site-title {
        margin-bottom: .5em;
    }
    .links a {
        margin-right: 1.5em;
    }
    .links a:hover {
        text-decoration: underline;
    }

    .socials-list {
        display: flex;
        justify-content: flex-end;
        gap: 1em;
    }
    .social-icon {
        width: 40px;
        height: auto;
        color: var(--gray);
    }
    .social-icon:hover {
        color: var(--accent-contrast);
    }

    .copyright {
        width: 100%;
        text-align: center;
        margin-top: 4em;
        font-size: .8em;
        color: var(--gray);
    }
    .copyright a {
        color: var(--gray);
    }
    .copyright a:hover {
        color: var(--accent-contrast);
    }

    @media (max-width: 800px) {
        #footer-container {
            justify-content: center;
        }
        .links {
            text-align: center;
            margin-bottom: 3em;
        }
        .links a {
            margin: 0 .7em;
        }
    }
</style>