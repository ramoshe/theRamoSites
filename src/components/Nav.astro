---
const path = new URL(Astro.request.url).pathname;
import Button from "./Button.astro";
---
<nav class="nav">
    <a class="navlink" class:list={path === "/services" ? "active" : ""} href="/services">Services</a>
    <a class="navlink" class:list={path === "/compare" ? "active" : ""} href="/compare">Compare</a>
    <a class="navlink" class:list={path === "/pricing" ? "active" : ""} href="/pricing">Pricing</a>
    <span class="button-wrapper">
        <Button type="btn-secondary" link="/start" text="Get Started" />
    </span>
</nav>

<style>
    .nav {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
    .navlink {
        margin: 0 1.4em;
        text-decoration: none;
        color: var(--text-color);
        transition: color var(--animationEffect);
    }
    .navlink:hover {
        color: var(--accent-contrast);
    }
    .navlink.active {
        color: var(--secondary-contrast);
    }
    .button-wrapper {
        margin-left: 1.5em;
    }

    @media (max-width: 800px) {
        .nav {
            display: none;
        }
    }
</style>