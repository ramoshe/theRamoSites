---
interface Props {
	title: string;
}

const { title } = Astro.props;
---
<section id="action" class="section cta">
    <div class="section-container">
        <h2 class="section-title">
            {title}
        </h2>
        <p class="section-content">
            <slot name="content" />
        </p>
        <div class="content-buttons">
            <slot name="buttons" />
        </div>
    </div>
</section>

<style>
    .section.cta {
        margin: 7em 0;
    }
    .section.cta .section-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        border: 1px solid var(--gray-mid);
        border-radius: var(--border-radius);
        width: fit-content;
        max-width: 90%;
        margin: 0 auto;
        padding: 2em 3em;
    }
    .section.cta .section-content {
        margin: 1em 0;
        text-align: center;
    }
    .section.cta .content-buttons {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        align-items: center;
    }

    @media (max-width: 800px) {
        .section.cta br {
            content: "";
        }
        .section.cta br:after {
            content: " ";
        }
    }
</style>